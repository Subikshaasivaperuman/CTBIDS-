{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mvn clean install -DskipTests",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java -jar target/selenium-mcp-server-1.0-SNAPSHOT.jar",
            "group": {
                "kind": "none"
            },
            "dependsOn": "build"
        }
    ]
}
